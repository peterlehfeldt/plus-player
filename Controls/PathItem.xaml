<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlusPlayer.Controls"
             xmlns:Controls="clr-namespace:PlusPlayer.Controls" x:Class="PlusPlayer.Controls.PathItem"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="320">
    <Grid Width="320" Height="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
       
        <Label x:Name="PathName" Content="D:\Music\AnotherPath\AndAnotherPath\Onemore" VerticalAlignment="Center"/>

        <Button x:Name="Remove_But" Height="14" Padding="0" Margin="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" BorderThickness="0"   Style="{StaticResource NoButtonHoverFocus}" FocusVisualStyle="{x:Null}" Click="Remove_But_Click">
            <Border Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/Close.png"></Image>
            </Border>
        </Button>

    </Grid>
</UserControl>
