<UserControl x:Class="PlusPlayer.Controls.ImageCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlusPlayer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image x:Name="Checked" Source="/Icons/CheckClosed.png" Visibility="Collapsed"/>
        <Image x:Name="Unchecked" Source="/Icons/CheckOpen.png" />
        <Rectangle Fill="Transparent" MouseLeftButtonUp="Check_Click"/>
    </Grid>
</UserControl>
